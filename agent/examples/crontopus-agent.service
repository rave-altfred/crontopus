[Unit]
Description=Crontopus Agent - GitOps-based job scheduler manager
Documentation=https://docs.crontopus.com/agent
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=crontopus
Group=crontopus

# Agent binary and configuration
ExecStart=/usr/local/bin/crontopus-agent --config /etc/crontopus/config.yaml

# Restart policy
Restart=always
RestartSec=10
StartLimitBurst=3
StartLimitInterval=60

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=crontopus-agent

# Working directory
WorkingDirectory=/var/lib/crontopus

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/var/lib/crontopus
ReadWritePaths=/var/run/cron.reboot

# Allow crontab access
ReadWritePaths=/var/spool/cron
ReadWritePaths=/var/spool/cron/crontabs

# Resource limits
LimitNOFILE=65536
LimitNPROC=4096

# Environment
Environment="HOME=/var/lib/crontopus"
Environment="PATH=/usr/local/bin:/usr/bin:/bin"

[Install]
WantedBy=multi-user.target
